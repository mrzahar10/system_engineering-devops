#!/usr/bin/env bash
# This script loops from 1 to 10 using while loop
# Prints "bad luck" on 4th iteration, "good luck" on 8th, and "Best School" otherwise

count=1
while [ $count -le 10 ]
do
  if [ $count -eq 4 ]; then
    echo "bad luck"
  elif [ $count -eq 8 ]; then
    echo "good luck"
  else
    echo "Best School"
  fi
  ((count++))
done
